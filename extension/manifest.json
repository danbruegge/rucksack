{
    "manifest_version": 2,
    "name": "Rucksack",
    "version": "0.1",

    "description": "Convert your tabs into a compact list.",

    "applications": {
        "gecko": {
            "id": "rucksack@example.com"
        }
    },

    "icons": {
        "32": "images/rucksack-32.png",
        "48": "images/rucksack-48.png"
    },

    "permissions": [
        "storage",
        "tabs"
    ],

    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },

    "browser_action": {
        "default_icon": "images/rucksack-32.png",
        "default_title": "Rucksack"
    }
}
